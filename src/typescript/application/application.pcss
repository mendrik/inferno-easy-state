@import '../variables.pcss';
@parcel-import '../mixins.pcss';

html,
body {
    padding: 0;
    margin: 0;
    overflow: hidden;
    width: 100vw;
    height: 100vh;
    font-family: var(--default-font);

    @mixin touch {
        position: fixed;
        height: var(--app-height);
    }
}

.application {
    height: 100vh;
    display: flex;
    flex-direction: column;

    @mixin touch {
        height: var(--app-height);
        min-height: 100%;
    }

    .header,
    .footer {
        flex: none;
        padding: 0;
        height: 40px;
    }

    .header {
        border-bottom: var(--hairline);
        display: flex;
        align-items: center;
        padding: 5px 10px;
    }

    .footer {
        height: 20px;
        border-top: var(--hairline);
    }

    .app-content {
        flex: auto;
    }

    .panel {
        padding: 10px;

        &.page {
            padding-right: 16px;
        }
    }
}

