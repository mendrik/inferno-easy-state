html,
body {
    padding: 0;
    margin: 0;
    overflow: hidden;
    max-width: 100vw;
    max-height: 100vw;
}

.application {
    height: 100vh;
    display: flex;
    flex-direction: column;

    .header,
    .footer {
        flex: none;
        padding: 0;
        height: 40px;
    }

    .footer {
        height: 20px;
    }

    .app-content {
        flex: auto;
    }
}

